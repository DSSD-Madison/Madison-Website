---
const {title, caption, photo} = Astro.props.data;

---

<main class="relative">
    <img src = {photo.fields.file.url} alt={title} class="block object-cover object-center w-full h-full rounded-lg">
    <div class="w-full absolute bottom-0 bg-gray-200 bg-opacity-50 p-4">
        <h2 class="text-md text-center text-gray-700">{caption}</h2>
    </div>
</main>


