---
const {data, id} = Astro.props;

let img;
if (data.photo) {
    img = "https:" + data.photo.fields.file.url;
}
---

<div class="mx-auto my-10 p-5 shadow-xl rounded-xl h-3/12 w-4/5 lg:w-1/2 min-w-20 flex flex-col lg:flex-row gray-1 bg-slate-200"  id={id}>
    <img class="md:h-60 inline-block py-auto self-center m-2 rounded-full" src={img ? img : "/no-user-img.svg"} alt="image">
    <div class="ml-1 lg:ml-10 my-2 p-1">
        <p class="text-2xl my-1">{data.fullName}</p>
        <p class="text-xl my-1">{data.role} {data.graduated && "- Graduate"}</p>
        {data.email && <a class="inline-block bg-blue-400 rounded text-gray-100 hover:bg-blue-500 transition-colors mt-5 py-2 px-3 text-xl" href={"mailto:" + data.email} target="_blank">Contact</a>}
    </div>
</div>